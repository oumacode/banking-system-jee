<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             version="3.0">
    <persistence-unit name="BankPU">
        <class>com.example.bankmangement.entity.Account</class>
        <properties>
            <!-- Correct property names for Jakarta EE 10 -->
            <property name="jakarta.persistence.jdbc.driver"
                      value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url"
                      value="jdbc:mysql://localhost:3306/bank"/>
            <property name="jakarta.persistence.jdbc.user"
                      value="root"/>
            <property name="jakarta.persistence.jdbc.password"
                      value="password"/>

            <!-- Correct schema generation property -->
            <property name="jakarta.persistence.schema-generation.database.action"
                      value="create"/>

            <!-- Show SQL -->
            <property name="jakarta.persistence.sql-dialect"
                      value="org.hibernate.dialect.MySQL8Dialect"/>
            <property name="jakarta.persistence.jdbc.show_sql"
                      value="true"/>
        </properties>
    </persistence-unit>
</persistence>